<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="point1ID" class="javabrains016.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="point2ID" class="javabrains016.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	<bean id="point3ID" class="javabrains016.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>

	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>properties/notificationsMsgs</value>
			</list>
		</property>
	</bean>

	<!-- short cut to include all the annotations all together. -->
	<context:annotation-config />

	<!-- Look for the beans in code as well -->
	<context:component-scan base-package="javabrains016" />
</beans>