<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangleid" class="javabrains001.Triangle">
		<!-- property tag uses setter to set the param value -->
		<!-- <property name="trgType" value="Equilateral" /> -->

		<!-- constructor-arg tag uses constructor to set the param value of object -->
		<!-- type defines what constructor to use -->
		<!-- index defines the location of param in multi argument constructor -->
		<constructor-arg index="0" value="Equilateral" />
		<constructor-arg index="1" type="int" value="20" />
	</bean>
</beans>