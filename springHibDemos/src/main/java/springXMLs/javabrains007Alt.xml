<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- This is common init and destroy methods for all the beans -->
<!-- <beans default-init-method="myInit" default-destroy-method="myDestroy"> -->

<beans>
	<bean id="triangleid" class="javabrains007.TriangleAlt"
		init-method="myInit" destroy-method="myDestroy">
		<property name="pointA" ref="point1ID" />
		<property name="pointB" ref="point2ID" />
		<property name="pointC" ref="point3ID" />
	</bean>

	<bean id="point1ID" class="javabrains007.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="point2ID" class="javabrains007.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	<bean id="point3ID" class="javabrains007.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>

</beans>