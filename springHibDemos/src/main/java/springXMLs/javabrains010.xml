<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangleId" class="javabrains010.Triangle">
		<property name="pointA" ref="point1ID" />
		<property name="pointB" ref="point2ID" />
		<property name="pointC" ref="point3ID" />
	</bean>

	<bean id="point1ID" class="javabrains010.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="point2ID" class="javabrains010.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	<bean id="point3ID" class="javabrains010.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>

	<bean id="circleId" class="javabrains010.Circle">
		<property name="center" ref="point1ID"></property>
	</bean>

</beans>