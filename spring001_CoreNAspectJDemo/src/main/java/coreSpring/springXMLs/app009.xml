<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangleid" class="coreSpring.unit009.Triangle">
		<property name="pointA" ref="point1ID" />
		<property name="pointB" ref="point2ID" />
		<property name="pointC" ref="point3ID" />
	</bean>

	<bean id="point1ID" class="coreSpring.unit009.Point">
		<property name="x" value="${pointA.pointX}" />
		<property name="y" value="${pointA.pointY}" />
	</bean>
	<bean id="point2ID" class="coreSpring.unit009.Point">
		<property name="x" value="${pointB.pointX}" />
		<property name="y" value="${pointB.pointY}" />
	</bean>
	<bean id="point3ID" class="coreSpring.unit009.Point">
		<property name="x" value="${pointC.pointX}" />
		<property name="y" value="${pointC.pointY}" />
	</bean>

	<bean class="coreSpring.unit009.MyBeanFactoryPostProcessor" />
	
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="coreSpring/properties/pointsConfig009.properties" />
	</bean>
</beans>